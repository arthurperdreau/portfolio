{% extends 'base.html.twig' %}

{% block body %}
    <div class="max-w-2xl mx-auto mt-10 p-6 bg-white shadow-md rounded-lg">
        <h1 class="text-2xl font-bold mb-6 text-gray-800">Créer un projet</h1>

        {{ form_start(form) }}
        <div class="space-y-4">
            {{ form_row(form.title, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded'}}) }}
            {{ form_row(form.description, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded'}}) }}
            {{ form_row(form.link, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded'}}) }}
            {{ form_row(form.technologies) }}
        </div>

        <div class="mt-6">
            <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                Créer
            </button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
