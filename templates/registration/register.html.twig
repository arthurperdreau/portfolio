{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-100">
        <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8">
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="mb-4 text-sm text-red-700 bg-red-100 border border-red-200 rounded p-3">
                    {{ flash_error }}
                </div>
            {% endfor %}

            <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">Register</h1>

            {{ form_start(registrationForm, {'attr': {'class': 'space-y-5'}}) }}

            <div>
                {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block mb-1 text-gray-700 font-medium'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-400 focus:border-blue-400'}}) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div>
                {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'block mb-1 text-gray-700 font-medium'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-400 focus:border-blue-400'}}) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <div class="flex items-center space-x-2">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'h-4 w-4 text-blue-600 border-gray-300 rounded'}}) }}
                {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'text-gray-700'}}) }}
            </div>
            {{ form_errors(registrationForm.agreeTerms) }}

            <button type="submit"
                    class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition">
                Register
            </button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
