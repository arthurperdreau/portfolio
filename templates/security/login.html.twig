{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-100">
        <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8">
            {% if error %}
                <div class="mb-4 text-sm text-red-700 bg-red-100 border border-red-200 rounded p-3">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="mb-4 text-gray-700">
                    You are logged in as <span class="font-semibold">{{ app.user.userIdentifier }}</span>,
                    <a href="{{ path('app_logout') }}" class="text-blue-600 hover:underline">Logout</a>
                </div>
            {% endif %}

            <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">Please sign in</h1>

            <form method="post" class="space-y-5">
                <div>
                    <label for="inputEmail" class="block mb-1 text-gray-700 font-medium">Email</label>
                    <input type="email"
                           id="inputEmail"
                           name="email"
                           value="{{ last_username }}"
                           autocomplete="email"
                           required
                           autofocus
                           class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-400 focus:border-blue-400" />
                </div>

                <div>
                    <label for="inputPassword" class="block mb-1 text-gray-700 font-medium">Password</label>
                    <input type="password"
                           id="inputPassword"
                           name="password"
                           autocomplete="current-password"
                           required
                           class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-400 focus:border-blue-400" />
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="flex items-center space-x-2">
                    <input type="checkbox" id="remember" name="_remember_me" class="h-4 w-4 text-blue-600 border-gray-300 rounded" />
                    <label for="remember" class="text-gray-700">Remember me</label>
                </div>

                <button class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition">
                    Sign in
                </button>
            </form>
        </div>
    </div>
{% endblock %}
